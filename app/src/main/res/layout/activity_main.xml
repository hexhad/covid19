<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="30dp"
    android:orientation="vertical">

    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="60dp"
       android:gravity="left"
       android:orientation="vertical"
       android:layout_marginBottom="5dp">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="20dp"
           android:text="updated on"/>
       <TextView
           android:id="@+id/update_date_time"
           android:layout_width="match_parent"
           android:layout_height="40dp"
           android:text="update_date_time"
           android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="new cases"/>
        <TextView
            android:id="@+id/local_new_cases"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="local_new_cases"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="local cases"/>
        <TextView
            android:id="@+id/local_total_cases"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="local_total_cases"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="total number of individuals in hospitals"/>
        <TextView
            android:id="@+id/local_total_number_of_individuals_in_hospitals"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="local_total_number_of_individuals_in_hospitals"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="deaths"/>
        <TextView
            android:id="@+id/local_deaths"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="local_deaths"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="new deaths"/>
        <TextView
            android:id="@+id/local_new_deaths"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="local_new_deaths"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="recovered"/>
        <TextView
            android:id="@+id/local_recovered"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="local_recovered"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="active cases"/>
        <TextView
            android:id="@+id/local_active_cases"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="local_active_cases"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="left"
        android:orientation="vertical"
        android:layout_marginBottom="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text="pcr testing count"/>
        <TextView
            android:id="@+id/total_pcr_testing_count"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="total_pcr_testing_count"
            android:textSize="20dp"/>
    </LinearLayout>




</LinearLayout>